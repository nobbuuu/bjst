<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dream.bjst">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.MyApp"
        android:allowBackup="false"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.CbgBase">
        <activity
            android:name=".repayment.ui.ExtendRePaymentActivity"
            android:exported="false" />
        <activity
            android:name=".repayment.ui.RepaymentDetailActivity"
            android:exported="false" />
        <activity
            android:name=".account.ui.ChatMessageActivity"
            android:exported="false" />
        <activity
            android:name=".account.ui.PrivacyActivity"
            android:exported="false" />
        <activity
            android:name=".account.ui.AccountDeleteActivity"
            android:exported="false" />
        <activity
            android:name=".account.ui.AboutUsActivity"
            android:exported="false" />
        <activity
            android:name=".account.ui.AccountSettingActivity"
            android:exported="false" />

        <meta-data
            android:name="design_width_in_dp"
            android:value="375" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="812" /> <!-- 全面屏适配 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.2" /> <!-- 华为刘海屏区域使用 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.dream.bjst.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="android:authorities">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"
                tools:replace="android:resource" />
        </provider>

        <activity android:name=".main.MainActivity" />
        <activity android:name=".other.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>