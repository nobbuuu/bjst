<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:lineVisible="true"
        app:title="Emergency Contacts (3/4)"
        app:titleSize="@dimen/sp_18"
        app:titleStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="contacts-1"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.dream.bjst.widget.StartEndLayout
            android:id="@+id/relationLay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endText="Selection relation"
            app:endTextColor="@color/dk_color_999999"
            app:endTextSize="13sp"
            app:isSelect="true"
            app:startText="Relationship"
            app:startTextColor="@color/colorBlack666"
            app:startTextSize="15sp" />

        <com.dream.bjst.widget.StartEndLayout
            android:id="@+id/phone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endText="Select contact person"
            app:endTextColor="@color/dk_color_999999"
            app:endTextSize="13sp"
            app:isSelect="true"
            app:startText="Phone Number"
            app:startTextColor="@color/colorBlack666"
            app:startTextSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_28"
            android:text="contacts-2"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.dream.bjst.widget.StartEndLayout
            android:id="@+id/relationLay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endText="Selection relation"
            app:endTextColor="@color/dk_color_999999"
            app:endTextSize="13sp"
            app:isSelect="true"
            app:startText="Relationship"
            app:startTextColor="@color/colorBlack666"
            app:startTextSize="15sp" />

        <com.dream.bjst.widget.StartEndLayout
            android:id="@+id/phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endText="Select contact person"
            app:endTextColor="@color/dk_color_999999"
            app:endTextSize="13sp"
            app:isSelect="true"
            app:startText="Phone Number"
            app:startTextColor="@color/colorBlack666"
            app:startTextSize="15sp" />
    </LinearLayout>

    <com.ruffian.library.widget.RTextView
        android:id="@+id/sureBtn"
        style="@style/sure_btn"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginBottom="18dp"
        android:text="Continue"
        app:layout_constraintBottom_toTopOf="@+id/loginCb"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>