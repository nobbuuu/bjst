<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".account.ui.DeleteProgressActivity">

    <com.ruffian.library.widget.RTextView
        android:id="@+id/deteTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_127"
        android:text="Deleting"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_20" />

    <com.ruffian.library.widget.RImageView
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_41"
        android:scaleType="fitXY"
        android:src="@mipmap/deleteicon"

        />

    <ProgressBar
        android:id="@+id/delete_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="@dimen/dp_274"
        android:layout_height="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        android:max="100"
        android:min="0"
        android:progress="10"
        android:progressDrawable="@drawable/delete_progress_bar"
        tools:ignore="MissingConstraints" />

    <com.ruffian.library.widget.RTextView
        android:id="@+id/data_delete_individual"
        android:layout_width="@dimen/dp_140"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="your individual data"
        android:textColor="#ff666666"
        android:textSize="@dimen/sp_15" />
</LinearLayout>