            <com.ruffian.library.widget.RTextView
                android:layout_width="283dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/dp_17"
                android:text="Accept Terms Conditions and Privacy Policy and to receive notification from SMS and email"
                android:textColor="#fff7002d"
                android:textSize="11sp" />
        </LinearLayout>

        <Button
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ff009b12"
            android:text="Please check the abo"
            android:textColor="@color/white" />

        <Button
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="#EDF9EE"
            android:text="Disagree"
            android:textColor="#ff009b12" />

    </LinearLayout>


