<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".repayment.ui.RepaymentDetailActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white" />

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:textColor="#ff000000"
        android:textSize="18sp"
        app:title="Repayment details" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_138"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/shap_account_background">

        <com.ruffian.library.widget.RImageView
            android:id="@+id/repayment_detail_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/icon" />

        <com.ruffian.library.widget.RTextView
            android:layout_width="61dp"
            android:layout_height="21dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="32dp"
            android:layout_toRightOf="@id/repayment_detail_icon"
            android:text="ACEloan"
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.ruffian.library.widget.RTextView
            android:layout_width="38dp"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginRight="@dimen/dp_15"
            android:text="Dued"
            android:textColor="#ff009b12"
            android:textSize="15sp" />

        <View
            android:id="@+id/repayment_detail_view"
            android:layout_width="305dp"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/repayment_detail_icon"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="#ffdddddd" />

        <com.ruffian.library.widget.RTextView
            android:layout_width="103dp"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/repayment_detail_view"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:text="Repay amount"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <com.ruffian.library.widget.RTextView
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_25"
            android:layout_below="@id/repayment_detail_view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="â‚¹ 6,200"
            android:textColor="#ff009b12"
            android:textSize="22sp" />
    </RelativeLayout>

    <com.ruffian.library.widget.RTextView
        android:layout_width="131dp"
        android:layout_height="@dimen/dp_20"
        android:layout_margin="@dimen/dp_20"
        android:text="Repayment Details"
        android:textColor="#ff666666"
        android:textSize="15sp" />

    <View

        android:layout_width="335dp"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/repayment_detail_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#ffdddddd" />
</LinearLayout>