<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".repayment.ui.RepaymentDetailActivity">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/white" />

        <com.hjq.bar.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:textColor="#ff000000"
            android:textSize="18sp"
            app:title="Repayment details" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_138"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shap_account_background">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/repayment_detail_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/icon" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="61dp"
                android:layout_height="21dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="32dp"
                android:layout_toRightOf="@id/repayment_detail_icon"
                android:text="ACEloan"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="38dp"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginTop="32dp"
                android:layout_marginRight="@dimen/dp_15"
                android:text="Dued"
                android:textColor="#ff009b12"
                android:textSize="15sp" />

            <View
                android:id="@+id/repayment_detail_view"
                android:layout_width="305dp"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/repayment_detail_icon"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#ffdddddd" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="103dp"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@id/repayment_detail_view"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Repay amount"
                android:textColor="#ff666666"
                android:textSize="15sp" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="80dp"
                android:layout_height="@dimen/dp_25"
                android:layout_below="@id/repayment_detail_view"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="₹ 6,200"
                android:textColor="#ff009b12"
                android:textSize="22sp" />
        </RelativeLayout>

        <com.ruffian.library.widget.RTextView
            android:layout_width="131dp"
            android:layout_height="@dimen/dp_20"
            android:layout_margin="@dimen/dp_20"
            android:text="Repayment Details"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <View
            android:layout_width="335dp"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/repayment_detail_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffdddddd" />
        //

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/loan_amount_rv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="@dimen/dp_22"
                android:src="@mipmap/loan_amount" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="96dp"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_toRightOf="@id/loan_amount_rv"
                android:text="Loan Amount"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="50dp"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_20"
                android:text="₹6,000"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>
        //

        <View
            android:layout_width="335dp"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/loan_date_iv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffdddddd" />
        //

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/loan_date_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="@dimen/dp_22"
                android:src="@mipmap/rapid_date" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="96dp"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_toRightOf="@id/loan_date_iv"
                android:text="Repaid Date"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_20"
                android:text="June 17 2021"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="335dp"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/loan_date_iv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffdddddd" />
        //

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/over_due_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="@dimen/dp_22"
                android:src="@mipmap/overdue_amount" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="96dp"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_toRightOf="@id/over_due_iv"
                android:text="Overdue Amount"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_20"
                android:text="₹600"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="335dp"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/loan_date_iv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffdddddd" />

        <Button
            android:id="@+id/confirm_pay_button"
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_35"
            android:background="#ff009b12"
            android:text="Confirmed payment"
            android:textColor="@color/white" />

        <Button
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#EDF9EE"
            android:text="Defer payment"
            android:textColor="#ff009b12" />

        <RelativeLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="363dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/shap_account_background">

            <com.ruffian.library.widget.RTextView
                android:id="@+id/already_repaid_tv"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_18"
                android:text="Already repaid?"
                android:textColor="#ff333333"
                android:textSize="20sp" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/input_rv"
                android:layout_width="228dp"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@id/already_repaid_tv"
                android:layout_alignLeft="@id/already_repaid_tv"
                android:layout_marginTop="@dimen/dp_12"
                android:text="Input UTR No. to update your loan."
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <com.ruffian.library.widget.RImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@id/already_repaid_tv"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_toRightOf="@id/input_rv"
                android:src="@mipmap/ic_up_one_level" />

            <View
                android:id="@+id/line_already"
                android:layout_width="335dp"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/input_rv"
                android:layout_margin="@dimen/dp_15"
                android:layout_gravity="center_horizontal"
                android:background="#ffdddddd" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/title_utr"
                android:layout_width="57dp"
                android:layout_height="25dp"
                android:layout_below="@id/line_already"
                android:layout_alignLeft="@id/line_already"
                android:text="UTR No."
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.ruffian.library.widget.REditText
                android:id="@+id/digital_et"
                android:layout_width="304dp"
                android:layout_height="39dp"
                android:layout_below="@+id/title_utr"
                android:layout_alignLeft="@id/title_utr"
                android:background="@drawable/shap_account_background"
                android:hint="Must be 12 digitals"
                android:inputType="number"
                android:paddingStart="@dimen/dp_5"
                android:maxLength="12"
                android:maxLines="1" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/notion_tv"
                android:layout_width="112dp"
                android:layout_height="14dp"
                android:text="Enter the correct No."
                android:layout_below="@id/digital_et"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="invisible"
                android:layout_alignLeft="@id/title_utr"
                android:layout_marginTop="@dimen/dp_5"
                />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/title_screenshot"
                android:layout_width="118dp"
                android:layout_height="25dp"
                android:layout_below="@id/notion_tv"
                android:layout_alignLeft="@id/title_utr"
                android:text="UTR Screenshot"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.ruffian.library.widget.RImageView
                android:id="@+id/add_picture_camera_iv"
                android:layout_width="107dp"
                android:layout_height="72dp"
                android:layout_below="@+id/title_screenshot"
                android:layout_alignLeft="@+id/title_screenshot"
                android:src="@mipmap/addpicturecamer" />

            <Button
                android:id="@+id/repaid_submit_button"
                android:layout_width="305dp"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/add_picture_camera_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#000000"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>