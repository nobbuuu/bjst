<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".repayment.ui.RepaymentDetailActivity">


        <com.hjq.bar.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_18"
            app:title="Repayment details" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_138"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/shap_account_background">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/repayment_detail_icon"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/icon" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/repayment_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_toRightOf="@id/repayment_detail_icon"
                android:text="ACEloan"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/repayment_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_15"
                android:text="Dued"
                android:textColor="#ff009b12"
                android:textSize="@dimen/sp_15" />

            <View
                android:id="@+id/repayment_detail_view"
                android:layout_width="@dimen/dp_305"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/repayment_detail_icon"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#ffdddddd" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="@dimen/dp_103"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@id/repayment_detail_view"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Repay amount"
                android:textColor="#ff666666"
                android:textSize="@dimen/sp_15" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/repayment_detail_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/repayment_detail_view"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:text="₹ 6,200"
                android:textColor="#ff009b12"
                android:textSize="@dimen/sp_22" />
        </RelativeLayout>

        <com.ruffian.library.widget.RTextView
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_20"
            android:layout_margin="@dimen/dp_20"
            android:text="Repayment Details"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/repayment_detail_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffdddddd" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/loan_amount_rv"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="@dimen/dp_22"
                android:src="@mipmap/loan_amount" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_toRightOf="@id/loan_amount_rv"
                android:text="Loan Amount"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/repayment_detail_loanAmount"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_20"
                android:text="₹6,000"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

        </RelativeLayout>
        //

        <View
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/loan_date_iv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffdddddd" />
        //

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/loan_date_iv"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_22"
                android:src="@mipmap/rapid_date" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_toRightOf="@id/loan_date_iv"
                android:text="Repaid Date"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/repayment_detail_loanDay"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_20"
                android:text="June 17 2021"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/loan_date_iv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffdddddd" />
        //

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ruffian.library.widget.RImageView
                android:id="@+id/over_due_iv"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_22"
                android:src="@mipmap/overdue_amount" />

            <com.ruffian.library.widget.RTextView
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_toRightOf="@id/over_due_iv"
                android:text="Overdue Amount"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/repayment_detail_overDueAmount"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_20"
                android:text="₹600"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/loan_date_iv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffdddddd" />

        <Button
            android:id="@+id/confirm_pay_button"
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_35"
            android:background="#ff009b12"
            android:text="Confirmed payment"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/defer_pay_button"
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#EDF9EE"
            android:text="Defer payment"
            android:textAllCaps="false"
            android:textColor="#ff009b12" />
        <!--这里是头布局-->

        <RelativeLayout
            android:id="@+id/header_rv"
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_86"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/shap_account_background">

            <com.ruffian.library.widget.RTextView
                android:id="@+id/header_repaid"

                android:layout_width="@dimen/dp_149"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_18"
                android:text="Already repaid?"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_20" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/header_input_utr"

                android:layout_width="@dimen/dp_228"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@id/header_repaid"
                android:layout_alignLeft="@id/header_repaid"
                android:layout_marginTop="@dimen/dp_12"
                android:text="Input UTR No. to update your loan."
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_14" />

            <com.ruffian.library.widget.RImageView
                android:id="@+id/header_arrow"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@id/header_repaid"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_toRightOf="@id/header_input_utr"
                android:src="@mipmap/ic_up_one_level" />
        </RelativeLayout>

        <!--这是要显示的尾部局-->
        <RelativeLayout
            android:id="@+id/footer_rv"
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_363"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/shap_account_background"
            android:visibility="gone">

            <com.ruffian.library.widget.RTextView
                android:id="@+id/already_repaid_tv"
                android:layout_width="@dimen/dp_149"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_18"
                android:text="Already repaid?"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_20" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/input_rv"
                android:layout_width="@dimen/dp_228"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@id/already_repaid_tv"
                android:layout_alignLeft="@id/already_repaid_tv"
                android:layout_marginTop="@dimen/dp_12"
                android:text="Input UTR No. to update your loan."
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_14" />

            <com.ruffian.library.widget.RImageView
                android:id="@+id/footer_arrow"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_below="@id/already_repaid_tv"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_toRightOf="@id/input_rv"
                android:src="@mipmap/ic_up_one_level" />

            <View
                android:id="@+id/line_already"
                android:layout_width="@dimen/dp_335"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/input_rv"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#ffdddddd" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/title_utr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_already"
                android:layout_alignLeft="@id/line_already"
                android:text="UTR No."
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:textStyle="bold" />

            <com.ruffian.library.widget.REditText
                android:id="@+id/digital_et"
                android:layout_width="@dimen/dp_304"
                android:layout_height="@dimen/dp_39"
                android:layout_below="@+id/title_utr"
                android:layout_alignLeft="@id/title_utr"
                android:background="@drawable/shap_account_background"
                android:hint="Must be 12 digitals"
                android:inputType="number"
                android:maxLength="12"
                android:maxLines="1"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingStart="@dimen/dp_5" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/notion_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/digital_et"
                android:layout_alignLeft="@id/title_utr"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Enter the correct No."
                android:textColor="#D50000"
                android:textSize="@dimen/sp_12"
                android:visibility="invisible" />

            <com.ruffian.library.widget.RTextView
                android:id="@+id/title_screenshot"
                android:layout_width="@dimen/dp_118"
                android:layout_height="@dimen/dp_25"
                android:layout_below="@id/notion_tv"
                android:layout_alignLeft="@id/title_utr"
                android:layout_marginTop="@dimen/dp_5"
                android:text="UTR Screenshot"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <com.ruffian.library.widget.RImageView
                android:id="@+id/add_picture_camera_iv"
                android:layout_width="@dimen/dp_107"
                android:layout_height="@dimen/dp_72"
                android:layout_below="@+id/title_screenshot"
                android:layout_alignLeft="@+id/title_screenshot"
                android:src="@mipmap/addpicturecamer" />
            <com.ruffian.library.widget.RTextView
                android:id="@+id/picture_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_picture_camera_iv"
                android:layout_alignLeft="@id/title_utr"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Upload UTR Screenshot"
                android:textColor="#D50000"
                android:textSize="@dimen/sp_12"
                android:visibility="invisible" />
            <Button
                android:id="@+id/repaid_submit_button"
                android:layout_width="@dimen/dp_305"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/picture_tv"
                android:layout_centerHorizontal="true"
                android:background="#000000"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dp_10"
                android:textSize="@dimen/sp_17" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>