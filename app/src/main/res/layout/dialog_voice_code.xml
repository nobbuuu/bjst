<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_transparent"
    android:orientation="vertical">

    <com.ruffian.library.widget.RLinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        app:corner_radius="@dimen/dp_4"
        app:background_normal="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/titleIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_47"
            android:src="@mipmap/ic_voice" />

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_38"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="@dimen/dp_38"
            android:text="Your number is being dialed, please pay attention to answer the call, and input the 4-digital OTP which you hear."
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/sureBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_48"
            android:layout_marginEnd="@dimen/dp_38"
            android:layout_marginBottom="@dimen/dp_60"
            android:gravity="center"
            android:text="Sure"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:background_normal="@color/color_009B12"
            app:corner_radius="@dimen/dp_4" />
    </com.ruffian.library.widget.RLinearLayout>


    <ImageView
        android:id="@+id/closeIv"
        android:layout_width="wrap_content"
        android:src="@mipmap/close_white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_height="wrap_content"/>

</LinearLayout>