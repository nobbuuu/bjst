<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_authentication_rv"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_110"
        android:layout_weight="1"
        android:background="@color/color_identify_unselect"
        android:clickable="true"
        tools:ignore="MissingConstraints">

        <com.ruffian.library.widget.RImageView
            android:id="@+id/identify_authentication"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/emergency_contack" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/identify_authentication_tv"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_15"
            android:layout_alignTop="@id/identify_authentication"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/identify_authentication"
            android:text="Authentication"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_13" />

        <com.ruffian.library.widget.RImageView
            android:id="@+id/identify_authentication_arrow"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_below="@id/identify_authentication_tv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_16"
            android:clickable="true"

            android:src="@mipmap/itentify_unselect_arrow" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>