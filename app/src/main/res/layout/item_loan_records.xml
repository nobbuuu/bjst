<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-12-15"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginStart="@dimen/dp_35"
        android:textSize="15sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/loanRecordsRv"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dk_dp_16"
        android:layout_marginStart="@dimen/dk_dp_20"
        android:layout_marginEnd="@dimen/dk_dp_20"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="@drawable/shape_strok_rv"
        android:layout_height="wrap_content"/>
</LinearLayout>