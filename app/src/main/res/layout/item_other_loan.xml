<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/loanImg"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@mipmap/account_custermer_service" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="@+id/loanImg"
        app:layout_constraintStart_toEndOf="@+id/loanImg"
        app:layout_constraintEnd_toStartOf="@+id/loanAmount"
        app:layout_constraintTop_toTopOf="@+id/loanImg"
        android:layout_marginEnd="@dimen/dp_12"
        tools:text="ACEloan ACEloan" />

    <ImageView
        android:id="@+id/loanSelectIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:src="@mipmap/cb_uncheck"
        app:layout_constraintBottom_toBottomOf="@+id/loanImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loanImg" />

    <TextView
        android:id="@+id/loanAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_18"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@+id/loanImg"
        app:layout_constraintEnd_toStartOf="@+id/loanSelectIv"
        app:layout_constraintTop_toTopOf="@+id/loanImg"
        tools:text=" â‚¹ 10,000" />
</androidx.constraintlayout.widget.ConstraintLayout>
