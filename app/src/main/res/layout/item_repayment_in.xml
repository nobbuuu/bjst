<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_repayment_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_repayment_rv"
        android:orientation="horizontal">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/repayment_duTo"
            android:layout_width="@dimen/dp_69"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_weight="2"
            android:text="Overdued"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp_15" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/repayment_loan_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="right"
            android:text="0 days"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>
    //

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_repayment_rv"
        android:orientation="horizontal">

        <com.ruffian.library.widget.RTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_weight="2"
            android:text="Repay amount"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp_15" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/repayment_repay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:text="â‚¹ 6,200"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setterNowRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:clickable="true"
        android:background="@color/white">

        <com.ruffian.library.widget.RImageView
            android:id="@+id/repayment_item_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_21"
            android:src="@mipmap/icon" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/repayment_loan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_toRightOf="@+id/repayment_item_icon"
            android:text="Fun Loan"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <Button
            android:id="@+id/settleNowBtn"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_99"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shap_repayment_button"
            android:text="Settle now"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />
    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shap_gap_line"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_14"
        android:layerType="software" />

</LinearLayout>